#include <iostream>
using namespace std ;

int fibonacci (int n )
{
    if ( n<=0)
{
        return n ;
}
    return fibonacci(n-1) + fibonacci(n-2) ;
}
int main ()
{
    int n ;
    cout<<"entrer un nombre : " ;
    cin >> n ;

    cout<<"la suite de fibonacci est : " <<n<< "terms :" ;
    for (int i = 0; i <n ; ++i)
    {
        cout<< fibonacci(i)<<" ";
    }
    return 0 ;
}
